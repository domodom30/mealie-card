{
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["es2018", "dom", "dom.iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "removeComments": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}